<?xml version="1.0"?>
<robot name="FLF" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Scaling Factor -->
    <xacro:property name="scale" value="0.01"/>

    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.6 0.0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <!-- Base Footprint Link -->
    <link name="base_footprint" />

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="${8 * scale} ${15 * scale} ${0.5 * scale}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <!-- Neck Link -->
    <link name="neck_link">
        <visual>
            <geometry>
                <box size="${8.5 * scale} ${5 * scale} ${0.5 * scale}"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <!-- IR Sensor Link -->
    <link name="ir_link">
        <visual>
            <geometry>
                <box size="${4.5 * scale} ${13.5 * scale} ${0.5 * scale}"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <!-- Left Wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="${2.15 * scale}" length="${1.5 * scale}"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- Right Wheel -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="${2.15 * scale}" length="${1.55 * scale}"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- Joints -->
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="base_neck_joint" type="fixed">
        <parent link="base_link"/>
        <child link="neck_link"/>
        <origin xyz="${8.25 * scale} 0 0" rpy="0 0 0"/>

    </joint>

    <joint name="base_ir_joint" type="fixed">
        <parent link="base_link"/>
        <child link="ir_link"/>
        <origin xyz="${14.75 * scale} 0 0" rpy="0 0 0"/>

    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 ${8.25 * scale} 0" rpy="1.57 0 0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 ${-8.25 * scale} 0" rpy="1.57 0 0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>
</robot>
